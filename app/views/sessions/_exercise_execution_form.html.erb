<div class='workout-session-execution-form'>
  <!-- <span class='session-saved hide'>Saved.</span> -->
  <%= form_for(exercise_execution, remote: true, :html => { class: 'session-exercise-execution-form' }) do |f| %>
    <fieldset class='fieldset'>
      <% if exercise.weight? %>
        <div class='field'>
          <%= f.select :weight, (1..500).to_a.each_slice(5), placeholder: "Weight", class: 'exercise-execution-performance-text' %>
          <%#= f.number_field :weight, placeholder: "Weight", class: 'exercise-execution-performance-text' %>
          <%= f.label :weight %>
        </div>
      <% end %>

      <% if exercise.percentage? %>
        <div class='field'>
          <%#= f.number_field :percentage, placeholder: 'Percentage', class: 'exercise-execution-performance-text' %>
          <%= f.select :percentage, (1..100).to_a.reverse, placeholder: 'Percentage', class: 'exercise-execution-performance-text' %>
          <%= f.label :target_achieved %>
        </div>
      <% end %>

      <% if exercise.reps? && exercise.percentage? %>
        <div class='field'>
          <%= f.select :reps, (1..20).to_a, placeholder: 'Reps', class: 'exercise-execution-performance-text' %>
          <%= f.label :reps %>
        </div>
        <% elsif exercise.reps? %>
         <div class='field'>
          <%= f.select :reps, (1..20).to_a, placeholder: 'Reps', class: 'exercise-execution-performance-text' %>
          <%= f.label :reps %>
        </div>
      <% end %>

      <% if exercise.time? %>
        <div class='field'>
          <%= f.text_field :time, placeholder: 'Time', class: 'time-input exercise-execution-performance-text' %>
          <%= f.label :time %>
        </div>
      <% end %>
      <div class='field stop-watch-container'>
        <span id='stop-watch' class='session-stop-watch'></span>
        <%= link_to 'Start', '#', id: 'start-stop-watch', class: 'start-session-stop-watch' %>
        <%= link_to 'Stop', '#', id: 'stop-stop-watch', class: 'stop-session-stop-watch' %>
        <%= link_to 'Reset', '#', id: 'reset-stop-watch', class: 'reset-session-stop-watch' %>
      </div>
    </fieldset>

      <%= f.hidden_field :exercise_id, value: exercise.id %>
      <%= f.hidden_field :session_id, value: session.id %>
  <% end %>
  <section class='previous-stats-container'>

  </section>
</div>
