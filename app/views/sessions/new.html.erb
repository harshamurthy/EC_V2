<div class='new-session-page'>
  <% if @client.cards.count < 1 || @client.cards.last.sessions.count < 1 %>
    <h1>Create an <span>A</span> routine for <%= link_to @client.name, client_url(@client.id) %></h1>
  <% elsif @client.cards.last.sessions.count == 8 %>
    <h1>Create a <span>B</span> routine for <%= link_to @client.name, client_url(@client.id) %> or <%= link_to "I'm done", client_url(params[:client_id]) %></h1>
  <% elsif @client.cards.last.sessions.count > 8 %>
    <h1>Create a <span>C</span> routine for <%= link_to @client.name, client_url(@client.id) %> or <%= link_to "I'm done", client_url(params[:client_id]) %></h1>

  <% end %>
  <%= render 'form' %>
</div>
