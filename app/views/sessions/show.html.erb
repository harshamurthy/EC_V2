<div class='workout-session-page'>
  <div class="nav-wrap">
    <nav class='workout-session-client-info'>
      <div class="nav-space"></div>
      <h1 class='client-session-title'><span class='session-client-name'><%= @session.client.name %> (Pin: <%= @session.client.machine_code %>)</span><span class='client-session-date'><%= @session.date.strftime("%B %d, %Y") if @session.date %></span></h1>
    </nav>
  </div>

  <aside class='workout-session-exercise-list'>
    <ul>
      <% @session.exercises.each do |exercise| %>
      <% if @session.exercises.first.id == exercise.id %>
        <li class='onclick session-exercise'>
          <%= link_to exercise.name, workout_session_url(@session.id, exercise_id: exercise.id), :class=> 'session-exercise-link', remote: true %>
        </li>
        <% else %>
        <li class='session-exercise'>
          <%= link_to exercise.name, workout_session_url(@session.id, exercise_id: exercise.id), :class=> 'session-exercise-link', remote: true %>
        </li>
        <% end %>
      <% end %>
    </ul>
  </aside>

  <div class='workout-session-execution-data'>
    <!-- <p style="position:absolute; right:10px; top:10px; color:gray;">Saved.</p> -->
    <%= render 'setting_execution_form', exercise: @session.exercises.first, setting_execution: @setting_execution, client: @session.client, session: @session %>
    <%= render 'exercise_execution_form', exercise: @session.exercises.first, exercise_execution: @exercise_execution, session: @session %>
    <%= render 'previous_stats', session: @session, exercise: @session.exercises.first %>
  </div>
</div>
