<div id="sessions">

<h2 id="month">
  <%= link_to "<i class=\"fa fa-arrow-circle-o-left\"></i>".html_safe, date: date.months_since(-1) %>
  <%= date.strftime("%B %Y") %>
  <%= link_to "<i class=\"fa fa-arrow-circle-o-right\"></i>".html_safe, date: date.months_since(1) %>
</h2>

  <%= calendar date do |date| %>
    <%= date.day %>
    <% if sessions_by_date[date] %>
      <span class="cal-session-count"><%= pluralize(sessions_by_date[date].count, "session") %></span>
      <ul class='cal-ul'>
        <% sessions_by_date[date].each_with_index do |session, index| %>
          <% if index > 1 %>
            <li class='hide cal-hidden'><%= link_to session.client.name, workout_session_url(session.id) %></li>
          <% else %>
            <li><%= link_to session.client.name, workout_session_url(session.id) %></li>
          <% end %>
        <% end %>
      </ul>
      <div class="see-more-or-less">
        <span class="cal-see-all"><%= link_to "See more", workout_sessions_url(specific_date: date) if sessions_by_date[date].count > 2 %></span>
      </div>
    <% end %>
  <% end %>
</div>

