<div class="password-reset-request-page">
  <div class="password-reset-request-form">
    <h2 class="password-reset-request-header">Forgot your password?</h2>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email, class: 'password-reset-request-labels' %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'password-reset-request-inputs' %></div>

      <div><%= f.submit "Send Reset Instructions", class: 'password-reset-request-button' %></div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>
