<div class='password-reset-page'>
  <div class='password-reset-form'>
    <h2 class='password-reset-header'>Change Password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div><%= f.label :password, 'New password', class: 'password-reset-labels' %><br />
      <%= f.password_field :password, autofocus: true, placeholder: 'New Password', class: 'password-reset-inputs' %></div>

      <div><%= f.label :password_confirmation, 'Confirm new password', class: 'password-reset-labels' %><br />
      <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'password-reset-inputs' %></div>

      <div><%= f.submit 'Change my password', class: 'password-reset-button' %></div>
    <% end %>
    <%#= render 'devise/shared/links' %>
  </div>
</div>
