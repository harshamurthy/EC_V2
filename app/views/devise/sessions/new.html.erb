<div class='sign-in-page'>
  <div class='sign-in-form'>
    <h2 class='site-brand'>The <span class='highlight'>Exercise</span> Assistant</h2>

    <%= form_for(resource, as: resource_name, url: new_gym_session_url) do |f| %>
      <div>
        <%= f.label :location, class: 'sign-in-labels' %>
        <%= f.text_field :location, autofocus: true, placeholder: 'Gym location', title: 'Please enter a valid location.', class: 'sign-in-inputs text-input' %>
      </div>

      <div>
        <%= f.label :password, class: 'sign-in-labels' %>
        <%= f.password_field :password, placeholder: 'Your password', title: 'Please enter your password.', class: 'sign-in-inputs text-input' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class='sign-in-help'>
          <%= f.check_box :remember_me, class: 'remember-me-checkbox' %> <%= f.label :remember_me, class: 'remember-me-label' %> Â·
          <%= link_to "Forgot password?", new_password_path(resource_name) %>
        </div>
      <% end %>

      <div class='submit-button'>
        <%= f.submit 'Sign In', class: 'sign-in-button-inactive' %>
      </div>
    <% end %>
    <%#= link_to 'Sign up', new_registration_path(resource_name), class: 'sign-up-link' %>
  </div>
</div>
