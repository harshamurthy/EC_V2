<div class='sign-up-page'>
  <h1 class='site-brand'>The <span class='highlight'>Exercise</span> Assistant</h1>
  <div class='sign-up-form'>

    <h2 class='sign-up-header'>Let's set up your gym's new account.</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :location, class: 'sign-up-labels' %>
      <%= f.text_field :location, placeholder: 'Gym location', title: 'Please enter a valid location.', class: 'sign-up-inputs text-input' %></div>

      <div><%= f.label :email, class: 'sign-up-labels' %>
      <%= f.email_field :email, autofocus: true, placeholder: 'Your email', class: 'sign-up-inputs' %></div>

      <div><%= f.label :password, class: 'sign-up-labels' %>
      <%= f.password_field :password, placeholder: 'Create password', class: 'sign-up-inputs' %></div>

      <div><%= f.label :password_confirmation, class: 'sign-up-labels' %>
      <%= f.password_field :password_confirmation, placeholder: 'That password, again', class: 'sign-up-inputs' %></div>

      <div><%= f.submit 'Sign up', class: 'sign-up-button' %></div>
    <% end %>
  </div>
</div>
<%#= render 'devise/shared/links' %>
