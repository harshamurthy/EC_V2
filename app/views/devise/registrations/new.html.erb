<div class="sign-up-page">
  <div class="sign-up-form">
    <h2 class='sign-up-header'>Sign Up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email, class: 'sign-up-labels' %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'sign-up-inputs' %></div>

      <div><%= f.label :location, class: 'sign-up-labels' %><br />
      <%= f.text_field :location, placeholder: 'Location', class: 'sign-up-inputs' %></div>

      <div><%= f.label :password, class: 'sign-up-labels' %><br />
      <%= f.password_field :password, placeholder: 'Password', class: 'sign-up-inputs' %></div>

      <div><%= f.label :password_confirmation, class: 'sign-up-labels' %><br />
      <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'sign-up-inputs' %></div>

      <div><%= f.submit "Sign Up", class: 'sign-up-button' %></div>
    <% end %>
  </div>
</div>
<%#= render "devise/shared/links" %>
