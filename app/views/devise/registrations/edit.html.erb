<div class='gym-edit-page'>
  <div class="gym-edit-form">
    <h2 class='gym-edit-header'>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email, class: 'gym-edit-labels' %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'gym-edit-inputs' %></div>

      <div><%= f.label :location, class: 'gym-edit-labels' %><br />
      <%= f.text_field :location, placeholder: 'Location', class: 'gym-edit-inputs' %></div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div><%= f.label :password, class: 'gym-edit-labels' %><br />
      <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'gym-edit-inputs' %></div>
       <i class='input-field-tool-tips'>(leave blank if you don't want to change it)</i>

      <div><%= f.label :password_confirmation, class: 'gym-edit-labels' %><br />
      <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'gym-edit-inputs' %></div>

      <div><%= f.label :current_password, class: 'gym-edit-labels' %><br />
      <%= f.password_field :current_password, placeholder: 'Current Password', class: 'gym-edit-inputs' %></div>
       <i class='input-field-tool-tips'>(Enter current password to confirm changes)</i>

      <div><%= f.submit 'Update Gym', class: 'gym-edit-button' %></div>
    <% end %>

    <p><%= button_to 'Delete Gym', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'gym-delete-button' %></p>

    <%= link_to 'Back', :back %>
  </div>
</div>
