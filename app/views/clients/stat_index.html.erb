<div class="client-stats-show">
  <div class="name-wrap">
    <% if @client.photos.count > 0 %>
      <div class='img-container'>
        <%= link_to image_tag(@client.photos.last.avatar.url(:thumb)), @client.photos.last.avatar.url(:medium), :target => "_blank" %>
      </div>
    <% else %>
      <div class='img-container'>
        <%= image_tag("default_profile_pic.jpg", width: "100", height: "100") %>
      </div>
    <% end %>
    <header>
      <h1 class='client-name'><%= @client.name %><span> (<%= @client.machine_code %>)</span></h1>
      <p class='client-email'><%= @client.email %></p>
      <div class="client-show-links">
        <p><%= link_to "<i class=\"fa fa-plus-square-o\"></i> Create workout".html_safe, new_workout_session_url(client_id: @client.id) %></p>
        <p><%= link_to "<i class=\"fa fa-align-justify\"></i> Strength profile".html_safe, client_url(@client.id),
        class: 'client-stat-show' %></p>
      </div>
    </header>
  </div>
  <section class='client-stats-index'>
    <header class='client-index-header'>
      <h2>Previous Body Compistions</h2>
      <p class='new-body-comp'><%= link_to "<i class=\"fa fa-plus-square-o\"></i> New Body Composition".html_safe, new_stat_client_url(@client.id) %></p>
    </header>
    <ul>
      <% @client.client_stats.each do |stat| %>
        <li><%= link_to stat.created_at.strftime("%B %d, %Y"), stat_show_client_url(client_stat_id: stat.id, client_id: @client.id)  %>
          <span><%= time_ago_in_words(stat.created_at) %></span>
        </li>
      <% end %>
    </ul>
  </section>
</div>
