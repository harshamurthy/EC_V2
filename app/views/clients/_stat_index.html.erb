<div class="client-stats-show">
  <section class='client-stats-index'>
    <% if client.client_stats.present? %>
      <header class='client-index-header'>
        <h2>Previous Body Compostions</h2>
        <p class='new-body-comp'><%= link_to "<i class=\"fa fa-plus-square-o\"></i> New Body Composition".html_safe, new_stat_client_url(client.id) %></p>
      </header>
      <ul>
        <% client.client_stats.reverse.each do |stat| %>
          <li><%= link_to stat.created_at.strftime("%B %d, %Y"), stat_show_client_url(client_stat_id: stat.id, client_id: client.id)  %>
            <span><%= time_ago_in_words(stat.created_at) %></span>
          </li>
        <% end %>
      </ul>

    <% else %>
      <div class="no-body-comp-note-container">
        <div class='no-body-comp-message'>
          <h3>Record the first body composition to stay on top of <%= @client.first_name %>!</h3>
        </div>
      </div>
      <div class="no-body-comp-img-container">
        <%= image_tag('body-composition-filler-image.png', width: '480px', height: '480px') %>
      </div>
    <% end %>
  </section>
</div>
