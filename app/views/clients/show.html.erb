<div class="client-container">

  <h1 class='client-name'><%= @client.name %></h1>
  <p class='client-email'><%= @client.email %></p>

  <ul class='client-workout-sessions'>

    <h2>Sessions</h2>

    <% @client.sessions.each do |session| %>
      <li><%= link_to session.name, workout_session_url(session.id) %></li>
    <% end %>
  </ul>
  <% if @client.sessions.present? %>
    <h2>Weight chart</h2>
    <%= content_tag :div, "", id: "client_chart", data: {exercises: weight_session_graph_data(@client)} %>
  <% end %>

  <div class="client-note-container">
    <%= form_tag note_client_url, method: 'post' do %>
      <%= text_field_tag :content, nil, placeholder: "Write a note about #{@client.name}" %>
      <%= hidden_field_tag :client_id, @client.id %>
      <%= submit_tag "Submit" %>
    <% end %>
    <ul>
      <% @client.notes.each do |note| %>
        <li><%= note.content %></li>
      <% end %>
    </ul>
  </div>
</div>
