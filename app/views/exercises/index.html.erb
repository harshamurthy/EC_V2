<h1>Listing exercises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Percentage</th>
      <th>Reps</th>
      <th>Time</th>
      <th>Seat</th>
      <th>Foot</th>
      <th>Degrees</th>
      <th>Back</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.weight %></td>
        <td><%= exercise.percentage %></td>
        <td><%= exercise.reps %></td>
        <td><%= exercise.time %></td>
        <td><%= exercise.seat %></td>
        <td><%= exercise.foot %></td>
        <td><%= exercise.degrees %></td>
        <td><%= exercise.back %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

