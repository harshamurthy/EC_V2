<%= form_for(@exercise) do |f| %>
  <% if @exercise.errors.any? %>
    <div id='error_explanation'>
      <ul>
      <% @exercise.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class='exercise-option'>
    <%= f.label :name, class: 'exercise-label' %>
    <%= f.text_field :name, placeholder: 'Name of exercise', class: 'exercise-input' %>
  </div>
  <ul>
    <h3 class='new-exercise-execution-header'>Select all the executions you'd like to track for <span>this exercise</span></h3>
    <li class='exercise-option exercise'>
      <%= f.check_box :weight %>
      <%= f.label :weight%>
    </li>
    <li class='exercise-option exercise'>
      <%= f.check_box :percentage %>
      <%= f.label :percentage %>
    </li>
    <li class='exercise-option exercise'>
      <%= f.check_box :reps %>
      <%= f.label :reps %>
    </li>
    <li class='exercise-option exercise'>
      <%= f.check_box :time %>
      <%= f.label :time %>
    </li>
  </br>
  <h3 class='new-exercise-setting-header'>Select all the settings that apply to <span>this exercise</span></h3>
    <li class='exercise-option setting'>
      <%= f.check_box :seat %>
      <%= f.label :seat %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :foot %>
      <%= f.label :foot %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :degrees %>
      <%= f.label :degrees %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :back %>
      <%= f.label :back %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :foot_stool %>
      <%= f.label :foot_stool %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :pin %>
      <%= f.label :pin %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :arm %>
      <%= f.label :arm %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :seatbelt %>
      <%= f.label :seatbelt %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :backpad %>
      <%= f.label :backpad %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :knee %>
      <%= f.label :knee %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :seatpad %>
      <%= f.label :seatpad %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :chestpad %>
      <%= f.label :chestpad %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :hips %>
      <%= f.label :hips %>
    </li>
    <li class='exercise-option setting'>
      <%= f.check_box :leg %>
      <%= f.label :leg %>
    </li>
  </ul>

  <div class='category exercise-option'>
  <h3>Choose a category for <span>this exercise</span></h3>
    <%= f.select :category, options_for_select(%w[Arms Legs Chest Abs Back Shoulders Other]), include_blank: true %>
  </div>

  <%= hidden_field_tag :client_id, value: params[:client_id] %>
  <%= f.hidden_field :gym_id, value: current_gym.id %>

  <div class='actions'>
    <%= f.submit 'Create exercise', class: 'exercise-form-button' %>
  </div>
<% end %>


